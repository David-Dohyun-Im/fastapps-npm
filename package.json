{
  "name": "flicky-react",
  "version": "1.0.0",
  "description": "React hooks for Flick ChatGPT widgets",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "build-all.mts",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "flick-build": "./build-all.mts"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "flick",
    "chatgpt",
    "widgets",
    "react",
    "hooks",
    "mcp"
  ],
  "author": "Flick Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "fast-glob": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flick-framework/flick-react.git"
  },
  "bugs": {
    "url": "https://github.com/flick-framework/flick-react/issues"
  },
  "homepage": "https://flick.dev"
}

